<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.robillo.readrush.ui.onboard.Fragment.OnboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:src="@drawable/one"
            android:padding="30sp"
            android:background="@color/rushRed"
            android:contentDescription="@string/fragment_image"
            android:id="@+id/image"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <com.hanks.htextview.line.LineTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            tools:ignore="MissingPrefix"
            fontPath="fonts/four.ttf"
            android:text="@string/dummy_header"
            android:textSize="35sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            app:animationDuration="3000"
            app:lineColor="@color/readBlack"
            app:lineWidth="4dp"
            android:id="@+id/header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_sentence"
            tools:ignore="MissingPrefix"
            android:gravity="center_horizontal"
            fontPath="fonts/four.ttf"
            android:padding="25sp"
            android:textSize="23sp"
            android:textColor="@color/colorTextTwo"
            android:id="@+id/description"/>

    </LinearLayout>

</LinearLayout>
