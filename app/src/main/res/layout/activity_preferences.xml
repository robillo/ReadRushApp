<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.robillo.readrush.ui.preference.PreferenceActivity">

    <TextView
        tools:ignore="MissingPrefix"
        fontPath="fonts/four.ttf"
        android:layout_marginTop="5sp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Book Preferences"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"
        android:paddingLeft="20sp"
        android:id="@+id/ken_current"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:id="@+id/recycler"
        android:layout_marginTop="20sp"
        tools:listitem="@layout/row_preferences"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25sp"
        app:cardBackgroundColor="@color/rushRed"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5sp">

        <Button
            tools:ignore="MissingPrefix"
            fontPath="fonts/four.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20sp"
            android:paddingLeft="20sp"
            android:background="?attr/selectableItemBackground"
            android:text="Done"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:id="@+id/done"/>

    </android.support.v7.widget.CardView>

</LinearLayout>
