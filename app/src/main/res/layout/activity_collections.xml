<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.robillo.readrush.ui.main.discover.collections.CollectionsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/colorTextTwo"
        tools:text="About"
        android:id="@+id/coll_name"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:contentDescription="null"
        android:background="@color/colorTextTwo"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/collections_list">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
