<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="5sp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:tint="@color/red3"
            android:contentDescription="User Profile Picture"/>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOne"
                android:textSize="18sp"
                tools:ignore="MissingPrefix"
                fontPath="fonts/three.ttf"
                android:layout_gravity="start"
                android:text="Robin Kamboj"
                android:paddingTop="5sp"
                android:paddingLeft="5sp"
                android:paddingBottom="5sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextOne"
                android:textSize="15sp"
                android:paddingLeft="5sp"
                tools:ignore="MissingPrefix"
                fontPath="fonts/three.ttf"
                android:layout_gravity="start"
                android:text="4.5/5\t\t2.5 Hours Ago"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextTwo"
        android:textSize="15sp"
        tools:ignore="MissingPrefix"
        fontPath="fonts/three.ttf"
        android:layout_gravity="start"
        android:text="This was a really cool book showing some real aspects of life and originality of the writer."
        android:padding="10sp"/>

</LinearLayout>