<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20sp"
    android:layout_margin="5sp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/rushRed"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textColorHint="@color/colorTextOne"
        app:backgroundTint="@color/rushRed"
        tools:hint="@string/sample_email"
        android:padding="15sp"
        android:textSize="23sp"
        android:id="@+id/edit_text" />

    <!--tools:ignore="MissingPrefix"-->
    <!--fontPath="fonts/three.ttf"-->

</android.support.v7.widget.CardView>