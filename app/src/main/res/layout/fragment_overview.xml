<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.robillo.readrush.ui.rushoverview.overviewFragment.OverviewFragment">

    <ImageView
        android:id="@+id/exit"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="end"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:contentDescription="Exit Screen"
        android:scaleType="fitXY"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="@color/colorTextOne"
        android:layout_marginRight="10sp" />

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/shimmer"
        app:shimmer_color="@color/red4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="180sp"
                android:layout_height="0sp"
                android:layout_weight="3"
                app:cardElevation="15sp"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                tools:targetApi="lollipop"
                app:cardCornerRadius="5sp">

                <ImageView
                    android:id="@+id/cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Cover"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/cover3"/>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:textColor="@color/colorTextOne"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    tools:ignore="MissingPrefix"
                    fontPath="fonts/four.ttf"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    tools:text="Perfect Dutch"
                    android:paddingTop="3sp"
                    android:paddingBottom="3sp"
                    android:paddingLeft="3sp"
                    android:paddingRight="3sp"
                    android:id="@+id/name"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    tools:ignore="MissingPrefix"
                    fontPath="fonts/four.ttf"
                    android:layout_gravity="center_horizontal"
                    tools:text="Mark Manson"
                    android:paddingTop="3sp"
                    android:paddingBottom="3sp"
                    android:paddingLeft="20sp"
                    android:paddingRight="20sp"
                    android:id="@+id/author"/>

                <com.willy.ratingbar.ScaleRatingBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:id="@+id/scale_rating_bar"
                    app:srb_starHeight="20sp"
                    app:srb_starWidth="20sp"
                    app:srb_clickable="false"
                    app:srb_isIndicator="false"
                    app:srb_scrollable="false"
                    app:srb_clearRatingEnabled="false">

                </com.willy.ratingbar.ScaleRatingBar>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="3"
                    android:layout_margin="3sp"
                    app:cardCornerRadius="10sp"
                    app:cardElevation="2sp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbarThumbVertical="@android:color/black">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextTwo"
                            android:padding="5sp"
                            android:layout_margin="4sp"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            tools:ignore="MissingPrefix"
                            fontPath="fonts/six.ttf"
                            android:layout_gravity="center_horizontal"
                            tools:text="This book refers to the early Dutch people who were esteemed guests of Americans and were against slavery."
                            android:id="@+id/description"/>

                    </ScrollView>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <android.support.v7.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="5sp"
                        android:layout_margin="3sp"
                        app:cardCornerRadius="15sp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextOne"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            tools:ignore="MissingPrefix"
                            fontPath="fonts/four.ttf"
                            android:visibility="invisible"
                            android:background="?attr/selectableItemBackground"
                            android:layout_gravity="center_horizontal"
                            android:text="See Reviews"
                            android:paddingTop="8sp"
                            android:paddingBottom="8sp"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:id="@+id/reviews"
                            android:clickable="false"/>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="5sp"
                        android:layout_margin="3sp"
                        app:cardCornerRadius="15sp">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            tools:ignore="MissingPrefix"
                            fontPath="fonts/four.ttf"
                            android:visibility="invisible"
                            android:background="?attr/selectableItemBackground"
                            android:layout_gravity="center_horizontal"
                            android:text="Add Rush"
                            android:paddingTop="8sp"
                            android:paddingBottom="8sp"
                            android:paddingLeft="20sp"
                            android:paddingRight="20sp"
                            android:id="@+id/add_read_rush"
                            android:clickable="false"/>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </io.supercharge.shimmerlayout.ShimmerLayout>

</LinearLayout>
