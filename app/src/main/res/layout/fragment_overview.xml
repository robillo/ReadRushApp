<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.robillo.readrush.ui.rushoverview.overviewFragment.OverviewFragment">

    <ImageView
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:src="@drawable/ic_clear_black_24dp"
        android:scaleType="centerInside"
        android:layout_gravity="end"
        android:contentDescription="Exit Screen"
        android:id="@+id/exit"
        android:tint="@color/colorTextOne"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="200sp"
            android:layout_height="0sp"
            android:layout_weight="1"
            app:cardElevation="15sp"
            android:layout_gravity="center"
            android:layout_margin="10sp"
            tools:targetApi="lollipop">

            <ImageView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Cover"
                android:scaleType="centerCrop"
                tools:src="@drawable/cover3"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:textColor="@color/colorTextOne"
                android:textStyle="bold"
                android:textSize="25sp"
                tools:ignore="MissingPrefix"
                fontPath="fonts/four.ttf"
                android:layout_gravity="center_horizontal"
                tools:text="Perfect Dutch"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:id="@+id/name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="MissingPrefix"
                fontPath="fonts/four.ttf"
                android:layout_gravity="center_horizontal"
                tools:text="Mark Manson"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:id="@+id/author"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:textColor="@color/colorTextTwo"
                android:padding="10sp"
                android:textStyle="bold"
                android:textSize="18sp"
                tools:ignore="MissingPrefix"
                fontPath="fonts/four.ttf"
                android:maxLines="3"
                android:layout_gravity="center_horizontal"
                tools:text="This book refers to the early Dutch people who were esteemed guests of Americans and were against slavery."
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:id="@+id/short_description"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:gravity="center">

                <android.support.v7.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="5sp"
                    android:layout_margin="10sp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextOne"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        tools:ignore="MissingPrefix"
                        fontPath="fonts/four.ttf"
                        android:background="?attr/selectableItemBackground"
                        android:layout_gravity="center_horizontal"
                        tools:text="See Reviews"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp"
                        android:id="@+id/reviews"/>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardElevation="5sp"
                    android:layout_margin="10sp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        tools:ignore="MissingPrefix"
                        fontPath="fonts/four.ttf"
                        android:background="?attr/selectableItemBackground"
                        android:layout_gravity="center_horizontal"
                        tools:text="Add Rush"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:paddingLeft="20sp"
                        android:paddingRight="20sp"
                        android:id="@+id/add_rush"/>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
